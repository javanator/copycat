{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "globalSettings"
  ],
  "properties": {
    "globalSettings": {
      "type": "object",
      "required": [
        "maxImageWidth",
        "maxImageHeight",
        "blockProfiles"
      ],
      "properties": {
        "maxImageWidth": {
          "type": "integer"
        },
        "maxImageHeight": {
          "type": "integer"
        },
        "blockProfiles": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "block"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "block": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "textureIndex"
                  ],
                  "properties": {
                    "textureIndex": {
                      "type": "integer"
                    },
                    "name": {
                      "type": "string",
                      "nullable": true
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "preferences": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "stampActivated",
          "playerName",
          "blockProfile",
          "buildWidth",
          "buildHeight"
        ],
        "properties": {
          "stampActivated": {
            "type": "boolean"
          },
          "playerName": {
            "type": "string"
          },
          "blockProfile": {
            "type": "string"
          },
          "buildWidth": {
            "type": "integer",
            "default": 64
          },
          "buildHeight": {
            "type": "integer",
            "default": 64
          },
          "activeShortcut": {
            "type": "string",
            "nullable": true
          },
          "stampItem": {
            "type": "string",
            "nullable": true
          },
          "undoEnabled": {
            "type": "boolean"
          },
          "dithering": {
            "type": "boolean",
            "default": true
          },
          "shortcuts": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "name",
                "url"
              ],
              "properties": {
                "name": {
                  "type": "string"
                },
                "url": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
